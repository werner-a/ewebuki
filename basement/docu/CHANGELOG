ALTER TABLE `site_text`
ADD `changed` DATETIME NOT NULL ,
ADD `bysurname` VARCHAR( 40 ) NOT NULL ,
ADD `byforename` VARCHAR( 40 ) NOT NULL ,
ADD `byemail` VARCHAR( 60 ) NOT NULL ,
ADD `byalias` VARCHAR( 20 ) NOT NULL ;


